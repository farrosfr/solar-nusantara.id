---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import { Image } from 'astro:assets';

export async function getStaticPaths({ paginate }) {
  const posts = (await getCollection('berita')).sort(
    (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
  );
  return paginate(posts, { pageSize: 6 });
}

const { page } = Astro.props;
---

<Layout title="Berita - Solar Nusantara - Halaman ${page.currentPage}">
  <main class="py-20 px-4 sm:px-6 lg:px-8 bg-gray-50 min-h-screen">
    <div class="max-w-7xl mx-auto text-center">
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4 tracking-tight">Berita & Wawasan</h1>
      <p class="text-lg md:text-xl text-gray-600">
        Ikuti perkembangan terbaru, proyek, dan inovasi dari Solar Nusantara.
      </p>
    </div>

    <div class="max-w-7xl mx-auto mt-16 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 gap-8">
      {page.data.map(post => (
        <a href={`/berita/${post.slug}/`} class="group block">
          <article class="bg-white p-6 rounded-xl shadow-lg hover:shadow-2xl transition-shadow duration-300 flex flex-col h-full">
            {post.data.heroImage && (
              <div class="flex-shrink-0 mb-4">
                <Image 
                  src={post.data.heroImage} 
                  alt={post.data.title}
                  width={600}
                  height={338}
                  class="w-full h-auto object-cover rounded-lg shadow-md" 
                />
              </div>
            )}
            <div class="flex-grow flex flex-col">
              <p class="text-sm font-semibold text-blue-600 mb-2">
                {post.data.pubDate.toLocaleDateString('id-ID', { year: 'numeric', month: 'long', day: 'numeric' })}
              </p>
              <h2 class="text-xl font-bold text-gray-900 group-hover:text-blue-700 transition-colors duration-300 flex-grow">{post.data.title}</h2>
              <p class="mt-3 text-base text-gray-600 line-clamp-3">{post.data.description}</p>
              <div class="mt-4 font-semibold text-blue-600 flex items-center group-hover:text-blue-800">
                Baca Selengkapnya
                <span class="ml-2 transition-transform duration-300 group-hover:translate-x-2">&rarr;</span>
              </div>
            </div>
          </article>
        </a>
      ))}
    </div>

    <div class="max-w-7xl mx-auto mt-16 flex justify-between items-center">
      <div>
        {page.url.prev && (
          <a href={page.url.prev} class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-lg transition-colors duration-300">
            &larr; Halaman Sebelumnya
          </a>
        )}
      </div>
      <div class="text-gray-600">
        Halaman {page.currentPage} dari {page.lastPage}
      </div>
      <div>
        {page.url.next && (
          <a href={page.url.next} class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-lg transition-colors duration-300">
            Halaman Berikutnya &rarr;
          </a>
        )}
      </div>
    </div>
  </main>
</Layout>